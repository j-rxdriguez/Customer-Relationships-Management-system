<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login/Register</title>
    <link rel="stylesheet" href="/stylesheets/admin-login-style.css">
</head>
<body>
    <div class="login-container">
        <div class="admin-login">
            <h2>Admin Login</h2>
            <form id="login-form" action="/auth/login" method="POST">
                <label for="admin-email">Email:</label>
                <input type="email" id="admin-email" name="email" required>

                <label for="admin-password">Password:</label>
                <input type="password" id="admin-password" name="password" required>

                <button type="submit">Login</button>
            </form>
        </div>
        <div class="register-login">
            <h2>Company Registration</h2>
            <form id="register-form" action="/admin/register" method="POST" onsubmit="return validateForm()">
                <label for="company-name">Company Name:</label>
                <input type="text" id="company-name" name="companyName" required>

                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>

                <label for="admin-email-register">Email:</label>
                <input type="email" id="admin-email-register" name="email" required>

                <label for="admin-password-register">Password:</label>
                <input type="password" id="admin-password-register" name="password" required>
                <p id="password-error" style="color: red;"></p>

                <button type="submit">Register</button>
            </form>
        </div>
    </div>

    <script>
    function validateForm() {
        var password = document.getElementById('admin-password-register').value;
        if (password.length < 6 || !/[!@#$%^&*(),.?":{}|<>]/g.test(password)) {
            document.getElementById('password-error').innerText = 'Password must be at least 6 characters long and include a special character';
            return false;
        }
        return true;
    }
    </script>
</body>
</html>
