<!-- views/admin/customers.hbs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: none;
            background-color: white !important;
            color: white !important;
        }

        .container {
            margin-top: 50px;
            background-color: white;
            color: black;
            padding: 20px;
            border-radius: 5px;
        }

        .table-container {
            max-height: 500px;
            overflow-y: auto;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .table thead th {
            background-color: #343a40;
            color: white;
        }

        .btn-action {
            color: white !important;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Customer Management</h1>
        <div class="table-container">
            {{!-- <pre>{{data}}</pre> --}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each customers}}
                    <tr>
                        <td>{{this.customerID}}</td>
                        <td>{{this.firstName}}</td>
                        <td>{{this.lastName}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <button class="btn btn-success btn-action">Edit</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
